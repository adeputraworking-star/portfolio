    achievements: [
      'Improved document processing API by optimizing over 40 logic components',
      'Integrated WhatsApp Live Chat using Qiscus third-party API for real-time chat',
      'Implemented Digital e-Signature (TTE) integration with Peruri and Tilaka vendors'
    ],
    current: true
  },
  {
    company: 'PT. AMP',
    industry: 'Gaming Industry',
    role: 'Fullstack Engineer',
    project: 'Game Topup and Monitoring System',
    period: 'March 2024 - May 2024',
    stack: ['React JS', 'Node.js', 'PostgreSQL', 'Sequelize'],
    achievements: [
      'Created dashboard for monitoring system and game top-up integration',
      'Built API meeting business demands with reliability, security, and high performance',
      'Integrated with third-party applications for top-up services'
    ]
  },
  {
    company: 'PT. Bumi Amartha Teknologi Mandiri',
    industry: 'Banking Industry',
    role: 'Fullstack Engineer',
    project: 'Regulatory Reporting System',
    period: 'December 2022 - December 2023',
    stack: ['React JS', '.NET Core', 'IIS', 'SQL Server', 'Microservices'],
    achievements: [
      'Maintained web application for Regulatory Reporting (ANTASENA, SLIK, SCV, APOLO)',
      'Built innovative custom Excel export features',
      'Improved Excel import performance: 1 hour to 2 mins for 30,000 rows',
      'Led team of 2 junior software engineers through SDLC'
    ]
  },
  {
    company: 'PT. Kelola Teknologi Digital',
    industry: 'Education Industry',
    role: 'Fullstack Engineer',
    project: 'Web Video Conference and Management System',
    period: 'November 2021 - December 2022',
    stack: ['React JS', 'Node.js', 'BigBlueButton'],
    achievements: [
      'Maintained web application for Video Conference',
      'Improved backend structure and architecture',
      'Implemented file management system',
      'Maintained and enhanced previous features'
    ]
  },
  {
    company: 'PT. Inovasi Solusi International',
    industry: 'Fintech Industry',
    role: 'Fullstack Engineer',
    project: 'Trading System and Calculation Monitoring System',
    period: 'February 2019 - November 2021',
    stack: ['React JS', 'Node.js', 'Microservices', 'Docker', 'Kubernetes', 'Elasticsearch'],
