---
import BaseLayout from '../layouts/BaseLayout.astro';
import Terminal from '../components/Terminal.astro';
import SkillBar from '../components/SkillBar.astro';
import profile from '../data/profile.json';
---

<BaseLayout title="Skills" description="Technical skills and expertise of Ade Putra Susila">
  <section class="py-8" data-tour-id="page-content">
    <!-- Command Header -->
    <div class="mb-8">
      <p class="text-terminal-cyan mb-2">visitor@ade-portfolio:~$</p>
      <h1 class="text-2xl md:text-3xl text-terminal-green glow-sm">ls -la skills/</h1>
    </div>

    <!-- Directory Listing -->
    <Terminal title="skills/" class="mb-8">
      <p class="text-terminal-muted mb-4">total 5 directories</p>
      <div class="space-y-1 text-sm">
        <p><span class="text-terminal-cyan">drwxr-xr-x</span> <span class="text-terminal-muted">ade</span> <span class="text-terminal-green">frontend/</span></p>
        <p><span class="text-terminal-cyan">drwxr-xr-x</span> <span class="text-terminal-muted">ade</span> <span class="text-terminal-green">backend/</span></p>
        <p><span class="text-terminal-cyan">drwxr-xr-x</span> <span class="text-terminal-muted">ade</span> <span class="text-terminal-green">database/</span></p>
        <p><span class="text-terminal-cyan">drwxr-xr-x</span> <span class="text-terminal-muted">ade</span> <span class="text-terminal-green">devops/</span></p>
        <p><span class="text-terminal-cyan">drwxr-xr-x</span> <span class="text-terminal-muted">ade</span> <span class="text-terminal-green">other/</span></p>
      </div>
    </Terminal>

    <div class="grid md:grid-cols-2 gap-6">
      <!-- Frontend -->
      <Terminal title="skills/frontend/">
        <p class="text-terminal-muted mb-4"># Frontend Technologies</p>
        <div class="space-y-3">
          {profile.skills.frontend.map((skill) => (
            <SkillBar name={skill.name} level={skill.level} />
          ))}
        </div>
      </Terminal>

      <!-- Backend -->
      <Terminal title="skills/backend/">
        <p class="text-terminal-muted mb-4"># Backend Technologies</p>
        <div class="space-y-3">
          {profile.skills.backend.map((skill) => (
            <SkillBar name={skill.name} level={skill.level} />
          ))}
        </div>
      </Terminal>

      <!-- Database -->
      <Terminal title="skills/database/">
        <p class="text-terminal-muted mb-4"># Databases</p>
        <div class="space-y-3">
          {profile.skills.database.map((skill) => (
            <SkillBar name={skill.name} level={skill.level} />
          ))}
        </div>
      </Terminal>

      <!-- DevOps -->
      <Terminal title="skills/devops/">
        <p class="text-terminal-muted mb-4"># DevOps & Tools</p>
        <div class="space-y-3">
          {profile.skills.devops.map((skill) => (
            <SkillBar name={skill.name} level={skill.level} />
          ))}
        </div>
      </Terminal>
    </div>

    <!-- Other Skills -->
    <Terminal title="skills/other/" class="mt-6">
      <p class="text-terminal-muted mb-4"># Other Technologies</p>
      <div class="space-y-3 max-w-md">
        {profile.skills.other.map((skill) => (
          <SkillBar name={skill.name} level={skill.level} />
        ))}
      </div>
    </Terminal>
  </section>
</BaseLayout>
