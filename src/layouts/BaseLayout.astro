---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import MatrixRain from '../components/MatrixRain.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Fullstack Engineer with 5 years of experience building scalable web applications' } = Astro.props;
const fullTitle = `${title} | Ade Putra Susila`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="author" content="Ade Putra Susila" />
    <meta name="keywords" content="Fullstack Engineer, React, Node.js, .NET Core, Web Developer, Indonesia" />

    <!-- Open Graph -->
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <title>{fullTitle}</title>
  </head>
  <body class="min-h-screen bg-bg-primary text-terminal-green relative">
    <MatrixRain />
    <div class="relative z-10">
      <Header />
      <main class="container mx-auto px-4 py-8 max-w-5xl">
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
