      'Implemented microservices architecture with Docker and Kubernetes'
    ]
  }
];
---

<BaseLayout title="Experience" description="Professional experience and work history of Ade Putra Susila">
  <section class="py-8" data-tour-id="page-content">
    <!-- Command Header -->
    <div class="mb-8">
      <p class="text-terminal-cyan mb-2">visitor@ade-portfolio:~$</p>
      <h1 class="text-2xl md:text-3xl text-terminal-green glow-sm">history --all</h1>
    </div>

    <!-- Summary -->
    <div class="terminal-window mb-8">
      <div class="terminal-header">
        <span class="terminal-dot terminal-dot-red"></span>
        <span class="terminal-dot terminal-dot-yellow"></span>
        <span class="terminal-dot terminal-dot-green"></span>
        <span class="terminal-title">career_summary.sh</span>
      </div>
      <div class="terminal-body">
        <p class="text-terminal-muted mb-2"># Career Timeline</p>
        <p class="mb-1">
          <span class="text-terminal-cyan">total_experience</span>=<span class="text-terminal-yellow">"5+ years"</span>
        </p>
        <p class="mb-1">
          <span class="text-terminal-cyan">companies_worked</span>=<span class="text-terminal-orange">5</span>
        </p>
        <p class="mb-1">
          <span class="text-terminal-cyan">industries</span>=(<span class="text-terminal-green">"Healthcare" "Gaming" "Banking" "Education" "Fintech"</span>)
        </p>
        <p>
          <span class="text-terminal-cyan">current_status</span>=<span class="text-terminal-green">"Currently employed @ PT. Data Integrasi Inovasi"</span>
        </p>
      </div>
    </div>

    <!-- Experience Timeline -->
    <div class="space-y-2">
      {experiences.map((exp, index) => (
        <ExperienceItem
          company={exp.company}
          industry={exp.industry}
          role={exp.role}
          project={exp.project}
          period={exp.period}
          stack={exp.stack}
          achievements={exp.achievements}
          index={index + 1}
        />
      ))}
    </div>
  </section>
</BaseLayout>
