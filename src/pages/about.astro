---
import BaseLayout from '../layouts/BaseLayout.astro';
import Terminal from '../components/Terminal.astro';
import profile from '../data/profile.json';
---

<BaseLayout title="About" description="Learn more about Ade Putra Susila, a Fullstack Engineer from Indonesia">
  <section class="py-8">
    <!-- Command Header -->
    <div class="mb-8">
      <p class="text-terminal-cyan mb-2">visitor@ade-portfolio:~$</p>
      <h1 class="text-2xl md:text-3xl text-terminal-green glow-sm">cat about.txt</h1>
    </div>

    <!-- Bio -->
    <Terminal title="about.txt" class="mb-8">
      <div class="space-y-4">
        <p class="text-terminal-muted"># Who am I?</p>
        <p class="text-terminal-green-dim leading-relaxed">
          {profile.bio}
        </p>

        <p class="text-terminal-muted mt-6"># Personal Info</p>
        <div class="space-y-1">
          <p>
            <span class="text-terminal-cyan">name</span>="<span class="text-terminal-orange">{profile.name}</span>"
          </p>
          <p>
            <span class="text-terminal-cyan">title</span>="<span class="text-terminal-green">{profile.title}</span>"
          </p>
          <p>
            <span class="text-terminal-cyan">location</span>="<span class="text-terminal-muted">{profile.location}</span>"
          </p>
          <p>
            <span class="text-terminal-cyan">experience</span>="<span class="text-terminal-yellow">5 years</span>"
          </p>
        </div>
      </div>
    </Terminal>

    <!-- Education -->
    <Terminal title="education.log" class="mb-8">
      <p class="text-terminal-muted mb-4"># Education Background</p>
      <div class="space-y-1">
        <p>
          <span class="text-terminal-cyan">institution</span>="<span class="text-terminal-orange">{profile.education.institution}</span>"
        </p>
        <p>
          <span class="text-terminal-cyan">degree</span>="<span class="text-terminal-green">{profile.education.degree}</span>"
        </p>
        <p>
          <span class="text-terminal-cyan">period</span>="<span class="text-terminal-muted">{profile.education.period}</span>"
        </p>
        <p>
          <span class="text-terminal-cyan">gpa</span>="<span class="text-terminal-yellow">{profile.education.gpa}</span>"
        </p>
      </div>
    </Terminal>

    <!-- Quick Stats -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      <div class="terminal-window">
        <div class="terminal-body text-center py-4">
          <p class="text-3xl text-terminal-green glow-sm mb-2">5+</p>
          <p class="text-terminal-muted text-sm">Years Experience</p>
        </div>
      </div>
      <div class="terminal-window">
        <div class="terminal-body text-center py-4">
          <p class="text-3xl text-terminal-green glow-sm mb-2">5</p>
          <p class="text-terminal-muted text-sm">Companies</p>
        </div>
      </div>
      <div class="terminal-window">
        <div class="terminal-body text-center py-4">
          <p class="text-3xl text-terminal-green glow-sm mb-2">15+</p>
          <p class="text-terminal-muted text-sm">Technologies</p>
        </div>
      </div>
      <div class="terminal-window">
        <div class="terminal-body text-center py-4">
          <p class="text-3xl text-terminal-green glow-sm mb-2">5</p>
          <p class="text-terminal-muted text-sm">Industries</p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
